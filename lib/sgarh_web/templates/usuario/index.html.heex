<div class="page-header">
  <h1 class="page-title">Usuários</h1>
  <%= link "+", to: Routes.usuario_registration_path(@conn, :new), class: "btn bg-success"%>
</div>
<div class="card-table">
  <table class="table">
    <thead class="">
      <tr class="">
        <th>Nome</th>
        <th>E-mail</th>
        <th>Ativo</th>
        <th>Admin</th>
        <th>Ações</th>
      </tr>
    </thead>
    <thead>
      <%= for usuario <- @usuarios do %>
        <tr>
          <td><%= usuario.nome %></td>
          <td><%= usuario.email %></td>
          <td>
            <%= if usuario.ativo do %>
              <span class="text-success">Sim</span>
            <% else %>
              <span class="text-danger">Não</span>
            <% end %>
          </td>
          <td>
            <%= if usuario.admin do %>
              <span class="text-success">Sim</span>
            <% else %>
              <span class="text-danger">Não</span>
            <% end %>
          </td>
          <td>
            <%# <%= link "Detalhes", to: Routes.usuario_path(@conn, :show, usuario), class: "" %> Detalhes
            <%= link "Deletar", to: Routes.usuario_path(@conn, :delete, usuario), method: :delete, class: "text-danger" %>
          </td>
        </tr>
      <% end %>
    </thead>
  </table>
</div>